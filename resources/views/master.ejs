<!DOCTYPE html>
<html>

<head>
    <meta charset='utf-8'>
    <meta http-equiv='X-UA-Compatible' content='IE=edge'>
    <link rel='stylesheet' href="/css/bootstrap.min.css">
    <link rel='stylesheet' href="/css/bootstrap-rtl.min.css">
    <link rel='stylesheet' href="/css/vazir.css">
    <link rel='stylesheet' href="/css/admin.css">

    <%- typeof style !== 'undefined' ? style : '' %>

    <script src="/js/jquery-3.3.1.min.js"></script>
    <script src="/js/popper.min.js"></script>
    <script src="/js/bootstrap.min.js"></script>
</head>

<body>

    <nav class="navbar navbar-expand-md navbar-dark bg-dark">
        <a class="navbar-brand" href="/">خانه</a>
        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarsExampleDefault"
            aria-controls="navbarsExampleDefault" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>

        <div class="collapse navbar-collapse" id="navbarsExampleDefault">
            <ul class="navbar-nav ml-auto">
                <li class="nav-item">
                    <a class="nav-link" href="#">دوره ها</span></a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="#">گروه ها</a>
                </li>
            </ul>

            <ul class="navbar-nav mr-auto">

                <% if (currentUser) { %>
                    <li class="nav-item">
                        <button class="btn btn-sm btn-light m-1 mx-3 px-3" disabled>
                            Welcome, <%= currentUser.name %>!
                        </button>
                    </li>
                        <li class="nav-item">
                            <a class="btn btn-sm btn-danger m-1" href="/logout">خروج</a>
                        </li>
                <% } else { %>
                    <li class="nav-item active">
                        <a class="btn btn-sm btn-light m-1" href="/auth/register">ثبت نام</span></a>
                    </li>
                    <li class="nav-item">
                        <a class="btn btn-sm btn-info m-1" href="/auth/login">ورود</a>
                    </li>
                <% } %>


            </ul>

        </div>
    </nav>
    <div class="containetr mt-5">
        <%- body %>
    </div>
    


    <%- typeof script !== 'undefined' ? script : '' %>

</body>

</html>